import json
from unittest import TestCase

from django.urls import reverse

from ..models import Product

class ProductRoutesTest(TestCase):

    def setUp(self):
        # Create 10 fake products with different availability
        for i in range(10):
            ProductFactory(availability=bool(i % 2))

    def test_can_list_products_by_availability(self):
        """Test that we can list products by availability through the API."""

        response = self.client.get(reverse('product-list'), {'availability': True})

        self.assertEqual(response.status_code, 200)
        self.assertEqual(response.content_type, 'application/json')

        products_data = json.loads(response.content)

        self.assertEqual(len(products_data), 5)
        for product_data in products_data:
            self.assertTrue(product_data['availability'])
