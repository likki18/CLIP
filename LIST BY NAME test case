import json
from unittest import TestCase

from django.urls import reverse

from ..models import Product

class ProductRoutesTest(TestCase):

    def setUp(self):
        # Create 10 fake products with different names
        for i in range(10):
            ProductFactory(name=f'Product {i}')

    def test_can_list_products_by_name(self):
        """Test that we can list products by name through the API."""

        response = self.client.get(reverse('product-list'), {'name': 'Product 5'})

        self.assertEqual(response.status_code, 200)
        self.assertEqual(response.content_type, 'application/json')

        products_data = json.loads(response.content)

        self.assertEqual(len(products_data), 1)
        self.assertEqual(products_data[0]['name'], 'Product 5')
